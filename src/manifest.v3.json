{
    "name": "Darker YouTube",
    "version": "3.5.1",
    "description": "YouTube Darkmode is now even darker",
    "icons": {
      "128": "assets/logo-128.png"
    },

    "manifest_version": 3,

    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "css": [
          "./styles/youtube/animations.css",
          "./styles/youtube/backgrounds.css",
          "./styles/youtube/buttons.css",
          "./styles/youtube/chips.css",
          "./styles/youtube/colors.css",
          "./styles/youtube/country-code.css",
          "./styles/youtube/fonts.css",
          "./styles/youtube/icons.css",
          "./styles/youtube/likebuttons.css",
          "./styles/youtube/navbar.css",
          "./styles/youtube/player.css",
          "./styles/youtube/popups.css",
          "./styles/youtube/progressbar.css",
          "./styles/youtube/scrollbar.css",
          "./styles/youtube/searchbox.css",
          "./styles/youtube/subscribe.css",
          "./styles/youtube/text.css",
          "./styles/youtube/theme.css",
          "./styles/youtube/thumbnails.css",
          "./styles/youtube/togglebutton.css",
          "./styles/youtube/topbar.css",
          "./styles/youtube/yt-logo.css"
        ],
        "js": [
          "./scripts/livechatInjection.js",
          "./scripts/accentColor.js"
        ],
        "run_at": "document_end"
      },
      {
        "matches": ["*://music.youtube.com/*"],
        "css": [
          "./styles/music/titlebar.css",
          "./styles/music/backgrounds.css",
          "./styles/music/buttons.css",
          "./styles/music/theme.css",
          "./styles/music/progressbar.css",
          "./styles/music/badges.css",
          "./styles/music/searchbox.css",
          "./styles/music/tabs.css",
          "./styles/music/thumbnails.css",
          "./styles/music/player.css",
          "./styles/music/songItem.css",
          "./styles/music/icons.css",
          "./styles/music/settings.css"
        ],
        "run_at": "document_start"
      },
      {
        "matches": ["*://music.youtube.com/*"],
        "js": [
          "./scripts/ytMusicTheme.js"
        ],
        "run_at": "document_end"
      },
      {
        "matches": ["*://consent.youtube.com/m?*"],
        "css": ["./styles/consent/main.css"],
        "run_at": "document_start"
      },
      {
        "matches": ["*://consent.youtube.com/d?*"],
        "css": [
          "./styles/consent/main.css",
          "./styles/consent/advanced_consent.css"
        ],
        "run_at": "document_start"
      }
    ],

    "action": {
      "default_icon": "./assets/logo-128.png",
      "default_popup": "./pages/popup/index.html"
    },

    "options_page": "./pages/options/index.html",

    "permissions": [
      "tabs",
      "storage"
    ],

    "host_permissions": [
      "*://consent.youtube.com/*",
      "*://music.youtube.com/*",
      "*://www.youtube.com/*",
      "*://youtube.com/*"
    ]
}